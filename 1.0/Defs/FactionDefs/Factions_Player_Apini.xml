  <!-- Apini player faction -->
  <FactionDef ParentName="Playerbase">
    <defName>TribalApiniPlayer</defName>
    <label>Hive</label>
    <description>A tribe of neolithic Apini.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>ApiniPawn</basicMemberKind>
    <factionNameMaker>NamerFactionHive</factionNameMaker>
    <settlementNameMaker>NamerbaseHive</settlementNameMaker>
    <playerInitialSettlementNameMaker>NamerbaseHive</playerInitialSettlementNameMaker>
    <pawnsPlural>Apini</pawnsPlural>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <hairTags>
      <li>Tribal</li>
      <li>Urban</li>
    </hairTags>
    <techLevel>Neolithic</techLevel>
    <backstoryCategories>
      <li>ApiniBackstory</li>
    </backstoryCategories>
    <pawnNameMaker>NamerPersonApini</pawnNameMaker>
    <homeIconPath>World/PlayerHiveZoom</homeIconPath>
    <expandingIconTexture>World/PlayerHive</expandingIconTexture>
    <colorSpectrum>
      <li>(255,165,0)</li>
    </colorSpectrum>
    <startingResearchTags>
      <li>TribalStart</li>
      <li>Apiculture</li>
    </startingResearchTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
      </thingDefs>
    </apparelStuffFilter>
  </FactionDef>
  
